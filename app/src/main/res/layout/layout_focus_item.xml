<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bg_listitem1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">

        <com.bhxx.lovecar.views.CircleImageView
            android:id="@+id/civUserHead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/head_04" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_weight="1"
            android:lines="1"
            android:text="222"
            android:textColor="@color/text_3333"
            android:textSize="@dimen/sp_34px" />

        <TextView
            android:id="@+id/tvCancelFocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_left_right"
            android:text="@string/operation_cancelfocus"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_30px" />
    </LinearLayout>

</LinearLayout>