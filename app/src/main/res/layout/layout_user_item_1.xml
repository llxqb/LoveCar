<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootUserLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/com_title_height"
    android:background="@drawable/selector_bg_listitem1"

    android:gravity="center_vertical"
    android:paddingLeft="@dimen/padding_15"
    android:paddingRight="@dimen/padding_15">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/listitem1_test"
        android:textSize="@dimen/menu_list_icon_text" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/padding_5"
        android:gravity="right"
        android:lines="1"
        android:hint="@string/mine_detail_hnit"
        android:textColor="@color/listitem1_test"
        android:textSize="@dimen/menu_list_icon_text" />

    <include
        android:id="@+id/arrow"
        layout="@layout/layout_list_item_common_arrow" />

</LinearLayout>