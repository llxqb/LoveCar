<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_240px"
    android:background="@color/white"
    android:paddingLeft="@dimen/com_left_right"
    android:paddingRight="@dimen/com_left_right"
    android:paddingTop="@dimen/com_left_right">

    <com.bhxx.lovecar.views.CircleImageView
        android:id="@+id/circleImg"
        android:layout_width="@dimen/height_90px"
        android:layout_height="@dimen/height_90px"
        android:layout_marginTop="@dimen/height_10px"
        android:src="@mipmap/default_avatar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/circleImg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/com_left_right"
        android:paddingRight="@dimen/com_left_right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我最帅"
                android:textColor="@color/text_9999"
                android:textSize="@dimen/sp_26px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <RatingBar
                    android:id="@+id/gjs_level"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:progressTint="@color/yellow"
                    android:rating="3.5" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_10px"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="换个新的吧"
            android:textColor="@color/text_3333"
            android:textSize="@dimen/sp_30px" />

        <TextView
            android:id="@+id/comment_creat_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_10px"
            android:gravity="bottom|right"
            android:text="1小时前"
            android:textColor="@color/text_little_black"
            android:textSize="@dimen/sp_26px" />
    </LinearLayout>


</RelativeLayout>
