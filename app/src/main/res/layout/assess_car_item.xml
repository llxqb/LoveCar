<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assess_car_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingRight="@dimen/com_left_right"
    android:paddingLeft="@dimen/com_left_right"
    android:paddingTop="@dimen/com_left_right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_270px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/assess_car_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_bg_02" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/com_left_right"
            android:layout_weight="2">

            <RelativeLayout
                android:id="@+id/home_car_rel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/assess_car_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_80px"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_34px" />

                <LinearLayout
                    android:id="@+id/center_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/assess_car_name"
                    android:layout_marginTop="@dimen/height_20px"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/assess_car_license_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_9999"
                        android:textSize="@dimen/sp_26px" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/height_26px"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/text_9999" />

                    <TextView
                        android:id="@+id/assess_car_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_9999"
                        android:textSize="@dimen/sp_26px" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/height_26px"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/text_9999" />

                    <TextView
                        android:id="@+id/assess_car_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_9999"
                        android:textSize="@dimen/sp_26px" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/center_layout"
                    android:layout_marginTop="@dimen/height_10px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/assess_car_assessprice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="等待估价"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/sp_30px" />

                    <TextView
                        android:id="@+id/assess_car_ispublish"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/com_left_right"
                        android:gravity="bottom|left"
                        android:text="已发布"
                        android:textColor="@color/app_grey"
                        android:textSize="@dimen/sp_26px"
                        android:visibility="invisible" />

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/assess_car_update"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="@dimen/height_10px"
                android:src="@mipmap/icon_xgh" />

            <TextView
                android:id="@+id/assess_car_publish"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|left"
                android:text="发布"
                android:textColor="@color/app_grey"
                android:textSize="@dimen/sp_32px" />

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/com_left_right"
        android:background="@color/com_line_bg" />

</LinearLayout>