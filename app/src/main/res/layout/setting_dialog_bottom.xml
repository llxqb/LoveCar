<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_grey_bg"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="@dimen/sp_30px" />

    <Button
        android:id="@+id/dialog_btn_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_80px"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_color_orange"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_36px" />

    <Button
        android:id="@+id/dialog_btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_80px"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_color_orange"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_36px" />

    <Button
        android:id="@+id/dialog_btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/operation_cancel" />
</LinearLayout>