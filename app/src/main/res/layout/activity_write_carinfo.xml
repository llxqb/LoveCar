<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.bhxx.lovecar.activity.WriteCarinfoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height">

        <ImageView
            android:id="@+id/write_carinfo_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/com_left_right"
            android:src="@mipmap/nav_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="车辆信息"
            android:textColor="@color/text_3333"
            android:textSize="@dimen/sp_36px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <ScrollView
        android:id="@+id/write_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/writecarinfo_cartype_rel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_title_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/com_left_right">

                <TextView
                    android:id="@+id/cartype_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="品牌车型"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <ImageView
                    android:id="@+id/writecarinfo_cartype_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_jtl" />

                <TextView
                    android:id="@+id/writecarinfo_cartype_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/height_10px"
                    android:layout_marginLeft="@dimen/com_left_right"
                    android:layout_toLeftOf="@id/writecarinfo_cartype_iv"
                    android:layout_toRightOf="@id/cartype_name"
                    android:gravity="right"
                    android:text="必选"
                    android:textColor="@color/text_6666"
                    android:textSize="@dimen/sp_32px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <RelativeLayout
                android:id="@+id/writecarinfo_licensetime_rel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_title_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/com_left_right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="上牌时间"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <ImageView
                    android:id="@+id/writecarinfo_licensetime_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_jtl" />

                <TextView
                    android:id="@+id/writecarinfo_licensetime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/height_10px"
                    android:layout_toLeftOf="@id/writecarinfo_licensetime_iv"
                    android:text="必选"
                    android:textColor="@color/text_6666"
                    android:textSize="@dimen/sp_32px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <RelativeLayout
                android:id="@+id/writecarinfo_city_rel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_title_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/com_left_right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="车辆所在地"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <ImageView
                    android:id="@+id/writecarinfo_city_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_jtl" />

                <TextView
                    android:id="@+id/writecarinfo_city_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/height_10px"
                    android:layout_toLeftOf="@id/writecarinfo_city_iv"
                    android:text="必选"
                    android:textColor="@color/text_6666"
                    android:textSize="@dimen/sp_32px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_title_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/com_left_right">

                <TextView
                    android:id="@+id/text_kmnum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="行驶里程"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <TextView
                    android:id="@+id/writecarinfo_kmnum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="万公里"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <EditText
                    android:id="@+id/writecarinfo_kmnum_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/height_10px"
                    android:layout_toLeftOf="@id/writecarinfo_kmnum_tv"
                    android:layout_toRightOf="@id/text_kmnum"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="必填"
                    android:inputType="number"
                    android:textColor="@color/text_6666"
                    android:textSize="@dimen/sp_32px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_title_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/com_left_right">

                <TextView
                    android:id="@+id/text_saletime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="过户次数"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <TextView
                    android:id="@+id/writecarinfo_saletime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="次"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <EditText
                    android:id="@+id/writecarinfo_saletime_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/height_10px"
                    android:layout_toLeftOf="@id/writecarinfo_saletime_tv"
                    android:layout_toRightOf="@id/text_saletime"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="必填"
                    android:inputType="number"
                    android:textColor="@color/text_6666"
                    android:textSize="@dimen/sp_32px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <RelativeLayout
                android:id="@+id/writecarinfo_transmission_case_rel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_title_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/com_left_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="变速箱"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <ImageView
                    android:id="@+id/writecarinfo_transmission_case_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_jtl" />

                <TextView
                    android:id="@+id/writecarinfo_transmission_case_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/height_10px"
                    android:layout_toLeftOf="@id/writecarinfo_transmission_case_iv"
                    android:text="必选"
                    android:textColor="@color/text_6666"
                    android:textSize="@dimen/sp_32px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_title_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/com_left_right">

                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="手机号"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <EditText
                    android:id="@+id/writecarinfo_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/height_10px"
                    android:layout_toRightOf="@id/text_phone"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="必填"
                    android:inputType="number"
                    android:textColor="@color/text_6666"
                    android:textSize="@dimen/sp_32px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_title_height"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="@dimen/com_left_right">

                <TextView
                    android:id="@+id/text_expectation_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="期望价"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <TextView
                    android:id="@+id/expectation_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="万"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_32px" />

                <EditText
                    android:id="@+id/writecarinfo_expectation_price_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/height_10px"
                    android:layout_toLeftOf="@id/expectation_price"
                    android:layout_toRightOf="@id/text_expectation_price"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="必填"
                    android:inputType="number|numberDecimal"
                    android:textColor="@color/text_6666"
                    android:textSize="@dimen/sp_32px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_title_height"
                android:background="@color/com_grey_bg"
                android:gravity="center_vertical"
                android:padding="@dimen/com_left_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:text="车况描述"
                    android:textColor="@color/text_6666"
                    android:textSize="@dimen/sp_30px" />
            </RelativeLayout>

            <EditText
                android:id="@+id/writecarinfo_describe_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_300px"
                android:background="@color/white"
                android:gravity="top"
                android:hint="请描述您的车辆情况（200字以内）"
                android:padding="@dimen/com_top_buttom"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <RelativeLayout
                android:id="@+id/uploadPictureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bhxx.lovecar.views.MyGridView
                    android:id="@+id/my_addaction_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/height_20px"
                    android:layout_marginTop="@dimen/height_20px"
                    android:gravity="center"
                    android:horizontalSpacing="5dp"
                    android:numColumns="4"
                    android:padding="10dp"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="5dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/com_title_height"
                android:layout_marginTop="@dimen/com_top_buttom"
                android:background="@color/app_grey"
                android:text="邀请平台估价"
                android:textColor="@color/white" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
