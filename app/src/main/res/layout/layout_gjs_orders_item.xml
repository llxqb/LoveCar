<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/com_left_right">

        <ImageView
            android:id="@+id/ivHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tvName"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="@dimen/height_400px"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivHead"
            android:layout_toRightOf="@+id/ivHead"
            android:lines="2"
            android:text="奔驰C级 2015款 1.6T 自动 C180L"
            android:textColor="@color/text_3333" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivHead"
            android:layout_toRightOf="@+id/ivHead"
            android:lines="1"
            android:text="2016-12-09  17:24"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_26px" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:lines="1"
            android:text="￥50"
            android:textSize="@dimen/sp_28px"
            android:textColor="@color/orange_normal" />

        <TextView
            android:id="@+id/tvReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivHead"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_color_orange"
            android:clickable="true"
            android:lines="1"
            android:padding="@dimen/padding_5"
            android:text="@string/mine_rec_orders"
            android:textColor="@color/white" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/mRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_alignBottom="@+id/ivHead"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/com_left_right"
            android:numStars="5"
            android:isIndicator="true"
            android:rating="5"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>