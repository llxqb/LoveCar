<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_240px"
    android:background="@color/white"
    android:paddingLeft="@dimen/com_left_right"
    android:paddingRight="@dimen/com_left_right">

    <com.bhxx.lovecar.views.CircleImageView
        android:id="@+id/circleImg"
        android:layout_width="@dimen/height_90px"
        android:layout_height="@dimen/height_90px"
        android:layout_marginTop="@dimen/height_40px"
        android:src="@mipmap/default_avatar" />

    <LinearLayout
        android:id="@+id/care_num_layout"
        android:layout_width="@dimen/height_100px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/car_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_fabulous" />

        <TextView
            android:id="@+id/car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/height_10px"
            android:text="0"
            android:textColor="@color/text_little_black"
            android:textSize="@dimen/sp_28px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/care_num_layout"
        android:layout_toRightOf="@id/circleImg"
        android:orientation="vertical"
        android:padding="@dimen/com_left_right">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我最帅"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_30px" />


        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_10px"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="换个新的吧"
            android:textColor="@color/text_3333"
            android:textSize="@dimen/sp_34px" />

        <TextView
            android:id="@+id/comment_creat_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/height_10px"
            android:text="1小时前"
            android:textColor="@color/text_little_black"
            android:gravity="bottom"
            android:textSize="@dimen/sp_26px" />
    </LinearLayout>


</RelativeLayout>
