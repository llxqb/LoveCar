<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_grey_bg"
    android:orientation="vertical"
    tools:context="com.bhxx.lovecar.activity.ZiXunActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height"
        android:background="@color/com_grey_bg">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/com_left_right"
            android:src="@mipmap/nav_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="资讯"
            android:textColor="@color/text_3333"
            android:textSize="@dimen/sp_36px" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height">

        <ImageView
            android:id="@+id/moreItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/com_left_right"
            android:src="@mipmap/icon_tjxm" />

        <android.support.design.widget.TabLayout
            android:id="@+id/my_zixun_tablayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_title_height"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/com_left_right"
            android:layout_toLeftOf="@id/moreItem"
            android:theme="@style/Theme.AppCompat"
            app:tabIndicatorColor="@color/app_grey"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/app_grey"
            app:tabTextColor="@color/text_6666"/>


    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/my_zixun_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
