<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_grey_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="选车"
            android:textColor="@color/text_3333"
            android:textSize="@dimen/sp_34px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_120px"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sort_newscar_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新上架"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_10px"
                android:src="@mipmap/icon_pulldownsx" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sort_brand_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_10px"
                android:src="@mipmap/icon_pulldownsx" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sort_price_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/text_6666"
                android:textSize="@dimen/sp_30px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_10px"
                android:src="@mipmap/icon_pulldownsx" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <LinearLayout
        android:id="@+id/tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_grey_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tag1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/com_left_right"
            android:background="@drawable/search_round_btn2"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/height_20px"
            android:paddingLeft="@dimen/height_20px"
            android:paddingRight="@dimen/height_16px"
            android:paddingTop="@dimen/height_20px"
            android:visibility="gone">

            <TextView
                android:id="@+id/tag1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_26px" />

            <ImageView
                android:id="@+id/tag1_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_12px"
                android:src="@mipmap/close_selectcar" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tag2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/height_10px"
            android:layout_marginLeft="@dimen/com_left_right"
            android:layout_marginRight="@dimen/com_left_right"
            android:layout_marginTop="@dimen/height_10px"
            android:background="@drawable/search_round_btn2"
            android:orientation="horizontal"

            android:padding="@dimen/height_10px"
            android:visibility="gone">

            <TextView
                android:id="@+id/tag2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="8"
                android:textSize="@dimen/sp_26px" />

            <ImageView
                android:id="@+id/tag2_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_12px"
                android:src="@mipmap/close_selectcar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tag3_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/height_10px"
            android:layout_marginLeft="@dimen/com_left_right"
            android:layout_marginRight="@dimen/com_left_right"
            android:layout_marginTop="@dimen/height_10px"
            android:background="@drawable/search_round_btn2"
            android:orientation="horizontal"

            android:padding="@dimen/height_10px"
            android:visibility="gone">

            <TextView
                android:id="@+id/tag3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_26px" />

            <ImageView
                android:id="@+id/tag3_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_12px"
                android:src="@mipmap/close_selectcar" />
        </LinearLayout>

    </LinearLayout>


    <com.bhxx.lovecar.views.PullToRefreshLayout
        android:id="@+id/my_pull"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/refresh_head" />

        <com.bhxx.lovecar.views.PullableListView
            android:id="@+id/my_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:scrollbars="none">

        </com.bhxx.lovecar.views.PullableListView>

        <include layout="@layout/load_more" />
    </com.bhxx.lovecar.views.PullToRefreshLayout>
</LinearLayout>
