<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/com_title_height"
    android:background="@drawable/selector_bg_listitem1"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/padding_15"
    android:paddingRight="@dimen/padding_15">

    <View
        android:id="@+id/icon"
        android:layout_width="@dimen/menu_list_icon_width"
        android:layout_height="@dimen/menu_list_icon_width"
        android:layout_marginRight="@dimen/padding_12"
        android:background="@mipmap/icon_logo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/listitem1_test"
        android:textSize="@dimen/menu_list_icon_text" />

    <include
        android:id="@+id/arrow"
        layout="@layout/layout_list_item_common_arrow" />

</LinearLayout>