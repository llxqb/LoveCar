<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zixun_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/com_left_right"
    android:paddingRight="@dimen/com_left_right"
    android:paddingTop="@dimen/com_left_right"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_270px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/zixun_item_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_bg_02" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/com_left_right"
            android:layout_weight="2"
            android:padding="@dimen/height_10px">

            <TextView
                android:id="@+id/zixun_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="雪铁龙"
                android:textColor="@color/text_3333"
                android:textSize="@dimen/sp_34px" />

            <TextView
                android:id="@+id/zixun_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="2016.11.28"
                android:textColor="@color/text_cccccc"
                android:textSize="@dimen/sp_28px" />

            <TextView
                android:id="@+id/zixun_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="推荐"
                android:textColor="@color/text_cccccc"
                android:textSize="@dimen/sp_28px" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/com_left_right"
        android:background="@color/com_line_bg" />

</LinearLayout>