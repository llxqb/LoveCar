<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_400px">

        <android.support.v4.view.ViewPager
            android:id="@+id/parent_home_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>

        <RelativeLayout
            android:id="@+id/home_cityname_rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/com_left_right"
            android:layout_marginTop="@dimen/com_left_right">

            <TextView
                android:id="@+id/home_citynametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海"
                android:textColor="@color/white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/height_10px"
                android:layout_toRightOf="@id/home_citynametv"
                android:src="@mipmap/icon_pulldown" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/home_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/com_left_right"
            android:layout_marginTop="@dimen/com_left_right"
            android:src="@mipmap/nav_searchb" />

        <LinearLayout
            android:id="@+id/parent_home_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_16px"
            android:orientation="horizontal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_300px"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/parent_model_zx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/parent_icon_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_xixun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent_icon_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_18px"
                    android:text="资讯"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_model_gjs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/parent_icon_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_gjs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent_icon_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_18px"
                    android:text="估价师"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_model_gj"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/parent_icon_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_chez" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent_icon_3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_18px"
                    android:text="估价"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28px" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/height_30px"
        android:background="@color/com_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_120px"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/com_left_right"
                android:text="金牌估价师"
                android:textColor="@color/text_3333"
                android:textSize="@dimen/sp_34px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_10px"
                android:text="你喜欢的都在这儿"
                android:textColor="@color/text_9999"
                android:textSize="@dimen/sp_22px" />
        </LinearLayout>

        <com.bhxx.lovecar.views.MyGridView
            android:id="@+id/home_gjs_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_40px"
            android:layout_marginRight="@dimen/height_40px"
            android:layout_marginTop="@dimen/height_40px"
            android:layout_marginBottom="@dimen/com_left_right"
            android:horizontalSpacing="@dimen/height_40px"
            android:numColumns="2"
            android:verticalSpacing="@dimen/height_40px"></com.bhxx.lovecar.views.MyGridView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/height_30px"
        android:background="@color/com_line_bg"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_140px"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_10px"
            android:text="好车推荐"
            android:textColor="@color/text_3333"
            android:textSize="@dimen/sp_34px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_10px"
            android:text="你喜欢的都在这儿"
            android:textColor="@color/text_9999"
            android:textSize="@dimen/sp_22px" />
    </LinearLayout>

</LinearLayout>