<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_grey_bg"
    android:orientation="vertical"
    tools:context="com.bhxx.lovecar.activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height">

        <ImageView
            android:id="@+id/ivBack"
            android:onClick="onBackClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/com_left_right"
            android:src="@mipmap/nav_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/operation_setup_password"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_34px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_title_height"
            android:layout_marginLeft="@dimen/height_28px"
            android:layout_marginRight="@dimen/com_left_right"
            android:inputType="textPassword"
            android:digits="@string/op_nozw"
            android:background="@null"
            android:hint="@string/mine_hint_password"
            android:lines="1"
            android:textSize="@dimen/sp_28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/com_left_right"
            android:background="@color/com_line_bg" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_title_height"
            android:layout_marginLeft="@dimen/height_28px"
            android:layout_marginRight="@dimen/com_left_right"
            android:inputType="textPassword"
            android:digits="@string/op_nozw"
            android:background="@null"
            android:hint="@string/mine_mobile_cnew_pass"
            android:lines="1"
            android:textSize="@dimen/sp_28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/com_left_right"
            android:background="@color/com_line_bg" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_90px"
        android:layout_marginLeft="@dimen/com_title_height"
        android:layout_marginRight="@dimen/com_title_height"
        android:layout_marginTop="@dimen/height_60px"
        android:background="@drawable/round_btn"
        android:text="@string/operation_register"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_34px" />

</LinearLayout>
