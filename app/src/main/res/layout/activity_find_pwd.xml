<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_grey_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="onBackClick"
            android:padding="@dimen/com_left_right"
            android:src="@mipmap/nav_return" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mine_find_password"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_34px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etMobilephone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_title_height"
            android:layout_marginLeft="@dimen/height_28px"
            android:layout_marginRight="@dimen/com_left_right"
            android:background="@null"
            android:hint="@string/mine_hint_mobile"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:textSize="@dimen/sp_28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/com_left_right"
            android:background="@color/com_line_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_title_height"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvCode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/height_28px"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/mine_hint_code"
                android:lines="1"
                android:maxLength="8"
                android:textSize="@dimen/sp_28px" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/height_15px"
                android:layout_marginTop="@dimen/height_15px"
                android:background="@color/com_line_bg" />

            <com.bhxx.lovecar.views.TimeButton
                android:id="@+id/tbtnCode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:text="@string/mine_get_code"
                android:textColor="@color/text_little_black"
                android:textSize="@dimen/sp_26px" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/com_left_right"
            android:background="@color/com_line_bg" />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_title_height"
            android:layout_marginLeft="@dimen/height_28px"
            android:layout_marginRight="@dimen/com_left_right"
            android:background="@null"
            android:digits="@string/op_nozw"
            android:hint="@string/mine_hint_new_pass"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="18"
            android:textSize="@dimen/sp_28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/com_left_right"
            android:background="@color/com_line_bg" />

        <EditText
            android:id="@+id/etConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/com_title_height"
            android:layout_marginLeft="@dimen/height_28px"
            android:layout_marginRight="@dimen/com_left_right"
            android:background="@null"
            android:digits="@string/op_nozw"
            android:hint="@string/mine_hint_c_new_pass"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="18"
            android:textSize="@dimen/sp_28px" />

    </LinearLayout>

    <Button
        android:id="@+id/btnFind"
        android:layout_width="@dimen/height_440px"
        android:layout_height="@dimen/height_90px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_60px"
        android:background="@drawable/round_btn"
        android:text="@string/operation_con_modify"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_34px" />
</LinearLayout>
