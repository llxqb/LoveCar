<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_car_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/com_left_right"
    android:paddingRight="@dimen/com_left_right"
    android:paddingTop="@dimen/com_left_right"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_270px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_car_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_bg_02" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/com_left_right"
            android:layout_weight="2">

            <RelativeLayout
                android:id="@+id/home_car_rel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/home_car_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_80px"
                    android:layout_marginTop="@dimen/height_10px"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="凯迪拉克"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_30px" />

                <TextView
                    android:id="@+id/home_car_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_car_name"
                    android:layout_marginTop="@dimen/height_30px"
                    android:text="500.00万"
                    android:textColor="@color/app_grey"
                    android:textSize="@dimen/sp_34px" />

                <TextView
                    android:id="@+id/home_car_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@id/home_car_price"
                    android:layout_marginBottom="@dimen/height_10px"
                    android:layout_marginTop="@dimen/height_10px"
                    android:gravity="bottom"
                    android:text="2016年/10公里"
                    android:textColor="@color/text_9999"
                    android:textSize="@dimen/sp_22px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_car_more"
                android:layout_width="@dimen/height_60px"
                android:layout_height="@dimen/height_60px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/icon_gengduo" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/home_car_more_lin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/app_grey"
                android:gravity="center"
                android:text="联系车主"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/chat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:gravity="center"
                android:text="在线沟通"
                android:textColor="@color/white" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/com_left_right"
        android:background="@color/com_line_bg" />
</LinearLayout>