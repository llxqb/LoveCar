<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height"
        android:padding="@dimen/com_left_right"
        >

        <TextView
            android:id="@+id/bsx_cancel"
            android:layout_width="@dimen/height_100px"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/sp_32px" />

        <TextView
            android:layout_width="@dimen/height_200px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="变速箱"
            android:textColor="@color/text_3333"
            android:textSize="@dimen/sp_36px" />


        <TextView
            android:id="@+id/bsx_sure"
            android:layout_width="@dimen/height_100px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/sp_32px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/height_60px"
        android:layout_marginBottom="@dimen/height_100px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bsx_mantran"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100px"
            android:gravity="center"
            android:text="手动"
            android:textColor="@color/text_3333"
            android:textSize="@dimen/sp_34px" />

        <TextView
            android:id="@+id/bsx_autotran"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100px"
            android:layout_marginTop="@dimen/height_45px"
            android:gravity="center"
            android:text="自动"
            android:textColor="@color/text_cccccc"
            android:textSize="@dimen/sp_34px" />

        <TextView
            android:id="@+id/bsx_allautotran"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_100px"
            android:layout_marginTop="@dimen/height_45px"
            android:gravity="center"
            android:text="手自一体"
            android:textColor="@color/text_cccccc"
            android:textSize="@dimen/sp_34px" />

    </LinearLayout>

</LinearLayout>
