<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assess_car_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/com_left_right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_216px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/assess_car_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_bg_02" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/com_left_right"
            android:layout_weight="2.2">

            <RelativeLayout
                android:id="@+id/home_car_rel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/assess_car_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_140px"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_30px" />

                <LinearLayout
                    android:id="@+id/center_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/assess_car_name"
                    android:layout_marginTop="@dimen/height_20px"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/assess_car_license_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_9999"
                        android:textSize="@dimen/sp_26px" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/height_26px"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/text_9999" />

                    <TextView
                        android:id="@+id/assess_car_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_9999"
                        android:textSize="@dimen/sp_26px" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/height_26px"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/text_9999" />

                    <TextView
                        android:id="@+id/assess_car_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/text_9999"
                        android:textSize="@dimen/sp_26px" />
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/assess_car_check_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/assess_car_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_left_right"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_xuanzehui" />
        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/com_left_right"
        android:background="@color/com_line_bg" />

</LinearLayout>